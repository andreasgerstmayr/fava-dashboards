{
    "name": "fava-dashboards",
    "type": "module",
    "scripts": {
        "build": "esbuild src/extension.ts --bundle --format=esm --loader:.css=file --outfile=../src/fava_dashboards/FavaDashboards.js --minify",
        "build:dts": "rm -r dist; tsc; node dist/scripts/build-dts.js",
        "build:echarts-themes": "tsc; node dist/scripts/build-echarts-themes.js; npm run lint:fix",
        "watch": "esbuild src/extension.ts --bundle --format=esm --loader:.css=file --outfile=../src/fava_dashboards/FavaDashboards.js --watch",
        "test": "playwright test",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@microsoft/api-extractor": "^7.55.2",
        "@playwright/test": "^1.58.0",
        "@tanstack/react-router-devtools": "^1.155.0",
        "@types/babel__standalone": "^7.1.9",
        "@types/d3": "^7.4.3",
        "@types/d3-sankey": "^0.12.5",
        "@types/node": "^25.0.10",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "prettier": "^3.8.1",
        "prettier-plugin-organize-imports": "^4.3.0",
        "typescript": "5.8.2",
        "typescript-eslint": "^8.53.1"
    },
    "dependencies": {
        "@babel/standalone": "^7.28.6",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.3.7",
        "@mui/material": "^7.3.7",
        "@mui/x-data-grid": "^8.26.0",
        "@tanstack/react-query": "^5.90.20",
        "@tanstack/react-router": "^1.155.0",
        "d3": "^7.9.0",
        "d3-sankey": "^0.12.3",
        "echarts": "^6.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-error-boundary": "^6.1.0",
        "zod": "^4.3.6"
    }
}
