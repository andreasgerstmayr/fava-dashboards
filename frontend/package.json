{
    "name": "fava-dashboards",
    "type": "module",
    "scripts": {
        "build": "esbuild src/extension.ts --bundle --format=esm --loader:.css=file --outfile=../src/fava_dashboards/FavaDashboards.js --minify",
        "build:dts": "rm -r dist; tsc; node dist/scripts/build-dts.js",
        "build:echarts-themes": "tsc; node dist/scripts/build-echarts-themes.js; npm run lint:fix",
        "watch": "esbuild src/extension.ts --bundle --format=esm --loader:.css=file --outfile=../src/fava_dashboards/FavaDashboards.js --watch",
        "test": "playwright test",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@microsoft/api-extractor": "^7.53.3",
        "@playwright/test": "^1.55.0",
        "@types/babel__standalone": "^7.1.9",
        "@types/d3": "^7.4.3",
        "@types/d3-sankey": "^0.12.4",
        "@types/node": "^24.0.1",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "esbuild": "^0.25.0",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.1.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.43.0"
    },
    "dependencies": {
        "@babel/standalone": "^7.28.4",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^7.3.2",
        "@mui/material": "^7.3.2",
        "@mui/x-data-grid": "^8.15.0",
        "@tanstack/react-query": "^5.66.0",
        "d3": "^7.9.0",
        "d3-sankey": "^0.12.3",
        "echarts": "^6.0.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-error-boundary": "^6.0.3",
        "react-router": "^7.1.5",
        "use-query-params": "^2.2.1",
        "zod": "^4.1.12"
    }
}
